#!/usr/bin/env bash 

set -eou pipefail

# for complete synchronization add --delete option

WORKDIR=/Users/raphael/
DEST=/Volumes/Backup/macbook/
COMMAND="rsync -azP" # --delete" 
Directories=(
'.config'
'.zshrc'
'Brewfile'
'Desktop'
'Documents'
'allApps.txt'
'backups'
'bin'
'bookmarks.txt'
'books'
'browserHist.txt'
'log'
'notes'
'projects'
)

for dir in "${Directories[@]}"; do
  $COMMAND $@ $WORKDIR$dir $DEST
done

