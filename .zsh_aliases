getbookmarks() {
  cat ~/Library/Application\ Support/BraveSoftware/Brave-Browser/Default/Bookmarks | \
  jq '.roots.bookmark_bar.children[] | select(.name != "not-share") | .children | .. | .url? | select(.)' | \
  uniq | tr -d \"
}

