# Searching & Finding
# find and fly to directory
alias find='fd --search-path ~ --search-path /Applications -uu'
export FZF_DEFAULT_COMMAND='fd --type f --color=never'
ffd() {
  local dir
  dir=$(find --type d | fzf) &&
  cd "$dir"
}
